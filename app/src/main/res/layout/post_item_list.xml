<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/rounded_rectangle_bg_accent"
        android:padding="12dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_post_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Minuman"/>

        <TextView
            android:id="@+id/tv_post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            tools:text="@tools:sample/lorem"/>

        <TextView
            android:id="@+id/tv_post_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="bottom"
            tools:text="Rp.20.000 /Task"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_task_notif"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_baseline_notifications_active_24"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tv_task_receive"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="3\nMenerima\nTask" />

        <Button
            android:id="@+id/btn_task_choose_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pilih_helper"
            android:textSize="11sp"
            android:layout_below="@+id/tv_task_receive"/>
    </RelativeLayout>
</LinearLayout>